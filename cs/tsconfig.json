{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
}